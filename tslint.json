{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {
        "object-literal-sort-keys": false
    },
    "rules": {
        "quotemark": [
            true,
            "single"
        ],
        "interface-name": [
            true,
            "never-prefix"
        ],
        "no-empty": [
            true,
            "allow-empty-functions"
        ],
        "class-name": true,
        "curly": true,
        "indent": [
            true,
            "spaces",
            2
        ],
        "max-line-length": [
            true,
            120
        ],
        "no-arg": true,
        "no-console": [
            true,
            "debug",
            "info",
            "time",
            "timeEnd",
            "trace"
        ],
        "no-construct": true,
        "no-debugger": true,
        "no-duplicate-variable": true,
        "no-eval": true,
        "no-string-literal": true,
        "trailing-comma": [
            true,
            {
                "multiline": {
                    "objects": "always",
                    "arrays": "always",
                    "functions": "ignore",
                    "typeLiterals": "ignore"
                },
                "esSpecCompliant": true
            }
        ],
        "no-use-before-declare": true,
        "semicolon": [
            true,
            "always"
        ],
        "arrow-parens": [
            true,
            "ban-single-arg-parens"
        ],
        "object-literal-sort-keys": [
            false,
            "match-declaration-order"
        ],
        "forin": false,
        "no-bitwise": false,
    },
    "rulesDirectory": []
}